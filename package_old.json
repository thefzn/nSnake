{
  "name": "rsnake",
  "private": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thefzn/rsnake.git"
  },
  "author": "fzn.webdesign@gmail.com <fzn.webdesign@gmail.com>",
  "bugs": {
    "url": "https://github.com/thefzn/rsnake/issues"
  },
  "scripts": {
    "clean": "rimraf build *.log* coverage",
    "start": "craco start",
    "build": "craco build",
    "postbuild": "cp _redirects build",
    "test": "bash -c 'npx cross-env NODE_ICU_DATA=$(npx node-full-icu-path) craco test'",
    "eject": "react-scripts eject",
    "check-types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/themes",
      "!src/utils/bootstrap.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!intl-messageformat|intl-messageformat-parser).+\\.js$"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "fetch": true
    },
    "rules": {
      "no-async-promise-executor": "error",
      "no-await-in-loop": "error",
      "no-console": "error",
      "no-misleading-character-class": "error",
      "no-template-curly-in-string": "error",
      "require-atomic-updates": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@loadable/component": "^5.12.0",
    "@queso/camel-case": "^0.2.0",
    "@queso/kebab-case": "^1.1.0",
    "@reach/router": "^1.3.3",
    "full-icu": "^1.3.1",
    "immer": "^4.0.2",
    "ky": "^0.19.0",
    "ky-universal": "^0.5.0",
    "linaria": "^1.3.3",
    "pathjoin": "0.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.4",
    "react-intl": "^3.12.1",
    "react-redux": "^7.2.0",
    "react-theme-context": "^2.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@craco/craco": "^5.6.4",
    "@jedmao/redux-mock-store": "^2.0.3",
    "@jedmao/storage": "^2.0.1",
    "@jedmao/tsconfig": "^0.3.0",
    "@testing-library/react": "^9.5.0",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^24.9.1",
    "@types/loadable__component": "^5.10.0",
    "@types/node": "^12.12.34",
    "@types/reach__router": "^1.3.4",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^4.3.5",
    "@types/redux-logger": "^3.0.7",
    "@types/webpack-env": "^1.15.1",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "fetch-mock": "^7.7.3",
    "husky": "^3.1.0",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react-scripts": "^3.4.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "rimraf": "^3.0.2",
    "ts-essentials": "^3.0.5",
    "typescript": "^3.8.3"
  }
}
